{
  "compilerOptions": {
    "lib": [
      "dom",
      "es2022"
    ],
    "outDir": "./lib/cjs/",
    "sourceMap": true,
    "declaration": true,
    "noImplicitAny": true,
    "module": "ESNext",
    "target": "es5",
    "allowJs": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "bundler",
    "jsx": "react-jsx"
  },
  "include": [
    "src/**/*.ts*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "lib"
  ]
}